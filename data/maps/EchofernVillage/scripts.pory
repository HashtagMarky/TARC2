script EchofernVillage_MonCry_Pangoro {
    playmoncry(SPECIES_PANGORO, CRY_MODE_NORMAL)
    applymovement(LOCALID_PLAYER, moves(
        delay_16
        emote_exclamation_mark
        walk_fast_down * 2
        walk_in_place_fast_up
        step_end
    ))
    waitmoncry
    msgbox(format("...?\p Was that psf?"))
    release
    end
}

